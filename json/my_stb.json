{
    "on_load":[
        {
            "macro": [
                { "device": "toshiba_tv", "type": "ir", "code":"POWER_ON" },
                { "device": "toshiba_tv", "type": "sleep", "duration": "2s" },
                { "device": "toshiba_tv", "type": "ir", "code":"INPUT_HDMI_1" }
            ]
        },
        {
            "macro": [
                { "device": "yamaha_receiver", "type": "ir", "code":"POWER_ON" },
                { "device": "yamaha_receiver", "type": "sleep", "duration": "2s" },
                { "device": "yamaha_receiver", "type": "ir", "code":"INPUT_HDMI_4" }
            ]
        }
],
    "on_unload": [
        {
            "macro": [
                { "device": "toshiba_tv", "type": "ir", "code":"POWER_ON" },
                { "device": "toshiba_tv", "type": "sleep", "duration": "2s" },
                { "device": "toshiba_tv", "type": "ir", "code":"INPUT_HDMI_1" }
            ]
        }
    ],

    "1":{
        "device":"toshiba_tv",
        "type": "ir",
